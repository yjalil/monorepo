{
  "name": "Python Project",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
    
  },
  
  "mounts": [
    "type=bind,source=${localWorkspaceFolder}/../.cache/vscode-extensions,target=/home/vscode/.vscode-server/extensions",
    "type=bind,source=${localWorkspaceFolder}/../.cache/uv,target=/home/vscode/.cache/uv",
    "type=bind,source=${localWorkspaceFolder}/../.cache/semgrep,target=/home/vscode/.cache/semgrep",
    "type=bind,source=${localWorkspaceFolder}/../.cache/.zsh_history,target=/home/vscode/.zsh_history",
    "type=bind,source=${localWorkspaceFolder}/../.cache/mise,target=/home/vscode/.local/share/mise",
    "type=bind,source=${localWorkspaceFolder}/../.keys/.ssh,target=/home/vscode/.ssh",
    "type=bind,source=${localWorkspaceFolder}/../.keys/.config,target=/home/vscode/.config",
    "type=bind,source=${localWorkspaceFolder}/../.keys/.gitconfig,target=/home/vscode/.gitconfig"
  ],
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "hverlin.mise-vscode",
        "dbtLabsInc.dbt",
        "ms-azuretools.vscode-containers"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/monorepo/.venv/bin/python",
        "python.analysis.typeCheckingMode": "strict",
        "terminal.integrated.defaultProfile.linux": "zsh",
        
        "github.copilot.enable": {
          "*": true
        },
        "remote.autoForwardPorts": false
      }
    }
  },

  "forwardPorts": [6379, 7000, 7888, 9000, 9001],

  "portsAttributes": {
    // ========================================
    // GLOBAL INFRASTRUCTURE (Never Changes)
    // ========================================
    
    // 6000-6999: MESSAGE BROKERS & QUEUES
    "6379": { "label": "Redis (broker/cache)", "onAutoForward": "ignore" },
    
    // 7000-7999: MONITORING & OBSERVABILITY
    "7000": { "label": "RedisInsight UI", "onAutoForward": "ignore" },
    
    // 9000-9999: STORAGE & OBJECT STORE
    "9000": { "label": "MinIO API", "onAutoForward": "ignore" },
    "9001": { "label": "MinIO Console UI", "onAutoForward": "ignore" },
    
    // DOCUMENTATION (Monorepo-wide)
    "7888": { "label": "MkDocs (documentation)", "onAutoForward": "ignore" }
  },

  "initializeCommand": "bash -c 'mkdir -p \"${localWorkspaceFolder}/../.cache\"/{uv,semgrep,mise} && touch \"${localWorkspaceFolder}/../.cache/.zsh_history\" && mkdir -p \"${localWorkspaceFolder}/../.keys\" && [ ! -L \"${localWorkspaceFolder}/../.keys/.ssh\" ] && ln -sf ~/.ssh \"${localWorkspaceFolder}/../.keys/.ssh\" || true && [ ! -L \"${localWorkspaceFolder}/../.keys/.gitconfig\" ] && ln -sf ~/.gitconfig \"${localWorkspaceFolder}/../.keys/.gitconfig\" || true'",
 
  "postCreateCommand": "mise trust && mise install && /home/vscode/.local/share/mise/shims/uv sync --all-packages",
  "remoteUser": "vscode"
}
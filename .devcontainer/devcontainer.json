{
  "name": "Python Project",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
    
  },
  
  "mounts": [
    "type=bind,source=${localWorkspaceFolder}/../.cache/vscode-extensions,target=/home/vscode/.vscode-server/extensions",
    "type=bind,source=${localWorkspaceFolder}/../.cache/uv,target=/home/vscode/.cache/uv",
    "type=bind,source=${localWorkspaceFolder}/../.cache/semgrep,target=/home/vscode/.cache/semgrep",
    "type=bind,source=${localWorkspaceFolder}/../.cache/.zsh_history,target=/home/vscode/.zsh_history",
    "type=bind,source=${localWorkspaceFolder}/../.cache/mise,target=/home/vscode/.local/share/mise",
    "type=bind,source=${localWorkspaceFolder}/../.keys/.ssh,target=/home/vscode/.ssh",
    "type=bind,source=${localWorkspaceFolder}/../.keys/.config,target=/home/vscode/.config",
    "type=bind,source=${localWorkspaceFolder}/../.keys/.gitconfig,target=/home/vscode/.gitconfig"
  ],
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "hverlin.mise-vscode",
        "dbtLabsInc.dbt",
        "ms-azuretools.vscode-containers"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/monorepo/.venv/bin/python",
        "python.analysis.typeCheckingMode": "strict",
        "terminal.integrated.defaultProfile.linux": "zsh",
        
        "github.copilot.enable": {
          "*": true
        },
        "remote.autoForwardPorts": false
      }
    }
  },
  
  "forwardPorts": [3000, 3333, 5432, 5540, 5555, 6379, 8000, 8888, 9000, 9001],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "ignore"
    },
    "3333":{
      "label": "Dagster",
      "onAutoForward": "ignore"
    },
    "5432":{
      "label": "Postgres",
      "onAutoForward": "ignore"
    },
    "5540":{
      "label": "Redis Insight",
      "onAutoForward": "ignore"
    },
    "5555":{
      "label": "Celery",
      "onAutoForward": "ignore"
    },
    "6379":{
      "label": "Redis",
      "onAutoForward": "ignore"
    },
    "8000": {
      "label": "Backend",
      "onAutoForward": "ignore"
    },
    "8888":{
      "label": "Docs",
      "onAutoForward": "ignore"
    },
    "9000": {
      "label": "Minio Api",
      "onAutoForward": "ignore"
    },
    "9001":{
      "label": "Minio UI",
      "onAutoForward": "ignore"
    }

  },
  
  "initializeCommand": "echo 'ðŸš€ Starting devcontainer...'",
  "onCreateCommand": "echo 'ðŸ“¦ Container created'",
  "updateContentCommand": "echo 'ðŸ”„ Updating content...'",
  "postStartCommand": "echo 'âœ… Container ready!'",
  
  "remoteUser": "vscode"
}
# Project Infrastructure Environment Variables
# Copy this to .env in your project's infra directory and customize

# Project Configuration
PROJECT_NAME=your_project_name  # e.g., svc-turfoo-ingest

# PostgreSQL Configuration
POSTGRES_DB=${PROJECT_NAME}_db
POSTGRES_USER=dbuser
POSTGRES_PASSWORD=dbpassword
POSTGRES_PORT=5432  # Change if you have multiple projects
POSTGRES_HOST=${PROJECT_NAME}-postgres

# Celery Configuration
CELERY_APP=your_module.celery_app  # e.g., turfoo.celery_app
CELERY_BROKER_URL=redis://default:${REDIS_PASSWORD}@monorepo-redis:6379/0
CELERY_RESULT_BACKEND=redis://default:${REDIS_PASSWORD}@monorepo-redis:6379/0

# Global Services (from global infra)
# These connect to the shared Redis and MinIO instances
REDIS_HOST=monorepo-redis
REDIS_PORT=6379
REDIS_PASSWORD=Yjalil2025*

MINIO_ENDPOINT=http://monorepo-minio:9000
MINIO_ACCESS_KEY=yjalil
MINIO_SECRET_KEY=Yjalil2025*
MINIO_BUCKET=${PROJECT_NAME}-bucket

# Application-specific environment variables
# Add your project's specific configuration below
